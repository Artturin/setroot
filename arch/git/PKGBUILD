# Maintainer: Tim Zhou <ttzhou@uwaterloo.ca>
# Author: ttz <ttzhou@uwaterloo.ca>

_pkgname=setroot
pkgname=setroot-git
pkgver=v1.2.gdc3c5e2
pkgrel=1
pkgdesc="simple program that sets your wallpaper. inspired by the *setroots and feh."
arch=('any')
url="https://github.com/ttzhou/setroot"
license=('GPLv3')
depends=('imlib2' 'libxinerama')
makedepends=('git')
optdepends=('sxiv: use its image viewer along with key-handler to call setroot')
provides=("${_pkgname}")
conflicts=("${_pkgname}")
source=("git+https://github.com/ttzhou/${_pkgname}.git")
md5sums=('SKIP')

pkgver() {
  cd $_pkgname
  echo $(git describe --long | sed 's|-[0-9]\+-|.|g')
}

build() {
  cd $_pkgname
  rm -rf arch # this also contains the PKGBUILD
  make PREFIX="usr"
}

package() {
  cd $_pkgname
  mkdir -p ${XDG_CONFIG_HOME:-$HOME/.config}/setroot
  make PREFIX="usr" DESTDIR="$pkgdir" install
}

# vim:set ts=2 sw=2 et:
